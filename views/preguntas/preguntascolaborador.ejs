<%- include('../partials/header') %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title">Preguntas</h1>
          <form method="POST" action="/guardarRespuestaAsesor">
            <% questions.forEach(function(question) { %>
              <div class="mb-3">
                <label for="<%= question.ID %>" class="form-label"><%= question.Pregunta %></label>
                <input type="number" id="<%= question.ID %>" name="<%= question.ID %>" class="form-control" min="1" max="5" value="1" required>
              </div>
            <% }); %>
            <div>
              <button id="boton-envio" type="submit" class="btn btn-primary">Enviar respuestas</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  // Obtener referencia al botón de envío
var botonEnvio = document.getElementById('boton-envio');

// Verificar si el formulario ha sido enviado
if (<%= enviado%>) {
  // Ocultar el botón de envío
  botonEnvio.style.display = 'none';
} else {
  // Mostrar el botón de envío
  botonEnvio.style.display = 'block';
}

</script>
<%- include('../partials/footer') %>
